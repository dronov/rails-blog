= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= pluralize(@post.errors.count, "error")
      %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
  %p
  = f.label :title
  %br
  = f.text_field :title

  %p
  = f.label :text
  %br
  = f.text_area :text

  %p
  = f.label :picture, "Upload local file:"
  %br
  = f.file_field :picture
  = f.hidden_field :picture_cache

  %p= f.submit
